<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>servlets.UserServlet</servlet-name>
    <servlet-class>servlets.UserServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.UserServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>servlets.ErrorServlet</servlet-name>
    <servlet-class>servlets.ErrorServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.ErrorServlet</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>servlets.MainServlet</servlet-name>
    <servlet-class>servlets.MainServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.MainServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>

</web-app>